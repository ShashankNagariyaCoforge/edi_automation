{
    "record_number": "1060",
    "record_name": "Financial and Currency Information",
    "record_purpose": "Holds transaction-level currency, conversion, and payment context for the purchase order",
    "record_classification": {
        "record_type_identifier": {
            "value": "PY",
            "source": "oracle_standard",
            "description": "Identifies this record as a financial information record"
        },
        "record_layout_qualifier": {
            "value": "CUR",
            "source": "oracle_standard",
            "description": "Financial record layout"
        }
    },
    "fields": {
        "TP_Translator_Code": {
            "description": "Trading partner identifier used by the EDI translator",
            "semantic_role": "trading_partner_identification",
            "value_source": "x12",
            "x12_mapping": {
                "segment": "GS",
                "element": "02",
                "name": "Application Sender's Code"
            },
            "value_type": "inferred"
        },
        "Header_Identifier_Location_Identifier": {
            "description": "Unique identifier of the purchase order header",
            "semantic_role": "transaction_identity",
            "value_source": "x12",
            "x12_mapping": {
                "segment": "BEG",
                "element": "03",
                "name": "Purchase Order Number"
            },
            "value_type": "inferred"
        },
        "Detail_Line_Identifier": {
            "description": "Detail line reference identifier",
            "semantic_role": "detail_reference",
            "value_source": "constant",
            "value_type": "constant",
            "fixed_value": ""
        },
        "Sub_Detail_Line_Identifier": {
            "description": "Sub-detail line reference identifier",
            "semantic_role": "sub_detail_reference",
            "value_source": "constant",
            "value_type": "constant",
            "fixed_value": ""
        },
        "Record_Number": {
            "description": "Oracle record number",
            "semantic_role": "record_identity",
            "value_source": "constant",
            "value_type": "constant",
            "fixed_value": "1060"
        },
        "TRANSACTIONAL_CURR_CODE": {
            "description": "Currency code in which the transaction is denominated",
            "semantic_role": "financial_context",
            "value_source": "x12_or_erp_default",
            "x12_mapping": {
                "segment": "CUR",
                "element": "02",
                "name": "Currency Code"
            },
            "value_type": "inferred_with_fallback",
            "notes": "If CUR segment is absent, ERP default currency is applied"
        },
        "TRANSACTIONAL_CURR_CODE_EXT1": {
            "description": "Extended transactional currency code",
            "semantic_role": "vendor_extension",
            "value_source": "vendor_specific",
            "value_type": "optional"
        },
        "CONVERSION_RATE_DATE": {
            "description": "Date used for currency conversion rate",
            "semantic_role": "currency_conversion_context",
            "value_source": "erp_derived",
            "value_type": "system_generated"
        },
        "CONVERSION_RATE": {
            "description": "Currency conversion rate applied to the transaction",
            "semantic_role": "currency_conversion_rate",
            "value_source": "erp_derived",
            "value_type": "system_generated"
        },
        "TRANSACTIONAL_CURR": {
            "description": "Internal Oracle transactional currency value",
            "semantic_role": "financial_context",
            "value_source": "derived",
            "value_type": "derived",
            "notes": "Typically same as TRANSACTIONAL_CURR_CODE"
        },
        "CONVERSION_TYPE_CODE": {
            "description": "Type of conversion rate applied",
            "semantic_role": "currency_conversion_type",
            "value_source": "erp_configuration",
            "value_type": "configured",
            "notes": "Examples: Corporate, Spot"
        },
        "CONVERSION_TYPE_CODE_EXT1": {
            "description": "Extended conversion type code",
            "semantic_role": "vendor_extension",
            "value_source": "vendor_specific",
            "value_type": "optional"
        },
        "PAYMENT_AMOUNT": {
            "description": "Total payment amount for the transaction",
            "semantic_role": "payment_amount",
            "value_source": "derived",
            "value_type": "derived",
            "notes": "Derived by ERP; not transmitted in X12 850"
        },
        "PAYMENT_TYPE_CODE": {
            "description": "Method of payment for the transaction",
            "semantic_role": "payment_method",
            "value_source": "erp_configuration",
            "value_type": "configured",
            "notes": "Examples: CHECK, CARD, TERMS"
        },
        "PAYMENT_TYPE_CODE_EXT1": {
            "description": "Extended payment type code",
            "semantic_role": "vendor_extension",
            "value_source": "vendor_specific",
            "value_type": "optional"
        },
        "CREDIT_CARD_CODE": {
            "description": "Credit card type code",
            "semantic_role": "credit_card_metadata",
            "value_source": "erp_configuration",
            "value_type": "optional"
        },
        "CREDIT_CARD_Code_EXT1": {
            "description": "Extended credit card code",
            "semantic_role": "vendor_extension",
            "value_source": "vendor_specific",
            "value_type": "optional"
        },
        "CREDIT_CARD_NUMBER": {
            "description": "Credit card number",
            "semantic_role": "sensitive_payment_data",
            "value_source": "not_expected",
            "value_type": "optional",
            "notes": "Typically not sent in X12 850"
        },
        "CREDIT_CARD_EXPIRATION_DATE": {
            "description": "Credit card expiration date",
            "semantic_role": "sensitive_payment_data",
            "value_source": "not_expected",
            "value_type": "optional"
        },
        "CREDIT_CARD_APPROVAL_DATE": {
            "description": "Credit card approval date",
            "semantic_role": "payment_authorization",
            "value_source": "erp_derived",
            "value_type": "optional"
        },
        "CREDIT_CARD_HOLDER_NAME": {
            "description": "Name of the credit card holder",
            "semantic_role": "payment_identity",
            "value_source": "erp_configuration",
            "value_type": "optional"
        },
        "CHECK_NUMBER": {
            "description": "Check number used for payment",
            "semantic_role": "payment_reference",
            "value_source": "erp_derived",
            "value_type": "optional"
        }
    }
}